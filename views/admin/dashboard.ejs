<!--Main layout-->

<main>
  <div class="px-4 py-5 my-5 text-center">
    <%- include('.././partials/messages.ejs'); %>
    <h1 class="display-5 fw-bold">Welcome to BloodMatters Admin Dashboard</h1>
    <div class="col-lg-6 mx-auto">
      <p class="lead mb-4">
        A simple webapp built for users to donate/request blood
      </p>
      <div
        id="carouselExampleControls"
        class="carousel slide"
        data-bs-ride="carousel"
      >
        <div class="carousel-inner">
          <div class="carousel-item active">
            <img
              class="d-block w-100"
              src="https://smbd.vercel.app/Img/cover.jpg"
              alt="First slide"
            />
          </div>
          <div class="carousel-item">
            <img
              class="d-block w-100"
              src="https://nhsbtdbe.blob.core.windows.net/umbraco-assets-corp/4090/blooddonor_facebook.jpg"
              alt="Second slide"
            />
          </div>
          <div class="carousel-item">
            <img
              class="d-block w-100"
              src="https://c8.alamy.com/comp/2F4NGTM/blood-donation-day-concept-with-blood-bag-and-heart-world-blood-donor-day-vector-illustrator-for-web-banners-brochure-cover-design-and-flyer-2F4NGTM.jpg"
              alt="Third slide"
            />
          </div>
        </div>
        <a
          class="carousel-control-prev"
          href="#carouselExampleControls"
          role="button"
          data-bs-slide="prev"
        >
          <span class="carousel-control-prev-icon" aria-hidden="true"></span>
          <span class="sr-only">Previous</span>
        </a>
        <a
          class="carousel-control-next"
          href="#carouselExampleControls"
          role="button"
          data-bs-slide="next"
        >
          <span class="carousel-control-next-icon" aria-hidden="true"></span>
          <span class="sr-only">Next</span>
        </a>
      </div>
    </div>
  </div>
</main>

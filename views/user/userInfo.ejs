                  <% if (profile.status === 'Idle') { %>
                    <button type="button" class="btn btn-secondary m-2"><%=profile.status%></button>
                <% } else if (profile.status === 'Doner') { %>
                  <button type="button" class="btn btn-warning m-2"><%=profile.status%></button>
                  <% } else { %>
                    <button type="button" class="btn btn-danger m-2"><%=profile.status%></button>

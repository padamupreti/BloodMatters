<!--Main layout-->

<main>
  <div class="px-4 py-5 my-5 text-center">
    <form action="/users/requestblood" method="POST">
      <div class="col-5 m-auto mt-5">
        <div class="card border-1 border-dark">
          <div class="card-body">
            <div class="form-group ">
              <label class="form-label"><h4>Request Blood</h4></label>
              <hr>
              <%- include('.././partials/messages.ejs'); %>
                    <div class="input-group">
                      <label class="form-label m-auto col-4"><h6>Title</h6></label>
                      <input type="text" value="Blood Request" name="title" class="form-control m-2" disabled></input>
                    </div>
                    <div class="input-group">
                      <label class="form-label m-auto col-4"><h6>Blood Group</h6></label>
                      <input type="text" value="<%=user.bloodgroup%>" name="bloodgroup" class="form-control m-2" disabled></input>
                    </div>
                    <div class="input-group">
                      <label class="form-label m-auto col-4"><h6>Age</h6></label>
                      <input type="text" value="<%=moment().diff(user.dob,'years')%>" name="bloodgroup" class="form-control m-2" disabled></input>
                    </div>
                    <div class="input-group">
                      <label class="form-label m-auto col-4"><h6>Description</h6></label>
                      <input type="text" placeholder="Enter description" name="desc" class="form-control my-3 border-1 border-success"></input>
                    </div>
                    <hr>
                </div>
                <button type="submit" class="btn btn-success m-2 col-5">Request Blood</button>
              </div>
            </form>
            <form action="/users/updateStatus/<%=user._id%>" method="post">
              <button type="submit" class="btn btn-danger mb-3 col-5">Cancel Request</button>
            </form>
          </div>
        </div>
    </div>
  </div>
</main>
